{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "tailwindCSS.validate": true,
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescript"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
